# http://editorconfig.org/
# top-most EditorConfig file
root = true

# All filetypes
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript and CSS
[*.{js,css}]
indent_style = tab
indent_size = tab
tab_width = 4

# JSON
[*.json]
indent_style = space
indent_size = 2
